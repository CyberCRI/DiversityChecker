{
  "manifest_version": 2,

  "name": "LinkedIn Diversity Checker",
  "description": "Checks the diversity of a LinkdIn search",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Check diversity"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://apius.faceplusplus.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/vsearch/*"],
      "js": ["content-script.js"]
    }
  ]
}